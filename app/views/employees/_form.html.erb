<%= form_for @employee do |f| %>
<br>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
<br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
<br>
    <%= f.label :alias %>
    <%= f.text_field :alias %>
    <% if params[:employee][:alias] == Employee.aliases %>
    <p><strong> <%= "This alias is taken. Try again." %> </strong></p> 
    <%end%>
<br>
    <%= f.label :title %>
    <%= f.text_field :title %>
    
<br>
    <%= f.label :office%>
    <%= f.text_field :office %>
<br>
    <%= f.label :dog_id %>
    <%= f.collection_select :dog_id, Dog.all, :id, :name %>
    <%= f.submit %>
<%end%>